<?xml version="1.0"?>
<classes>

  <!-- GWAS isn't in an ontology, but needs to extend Annotatable for the Publication.entities reverse reference -->  
  <class name="GWASExperiment" extends="Annotatable" is-interface="true">
    <attribute name="platformName" type="java.lang.String"/>
    <attribute name="platformDetails" type="java.lang.String"/>
    <attribute name="numberLociTested" type="java.lang.Integer"/>
    <attribute name="numberGermplasmTested" type="java.lang.Integer"/>
    <collection name="QTLs" referenced-type="QTL" reverse-reference="gwasExperiment"/>
  </class>

  <class name="QTL" extends="Annotatable" is-interface="true">
    <attribute name="traitName" type="java.lang.String"/>
    <attribute name="pValue" type="java.lang.Double"/>
    <reference name="organism" referenced-type="Organism"/>
    <reference name="gwasExperiment" referenced-type="GWASExperiment" reverse-reference="QTLs"/>
    <collection name="markers" referenced-type="GeneticMarker" reverse-reference="QTLs"/>
  </class>

  <class name="GeneticMarker" extends="SequenceFeature" is-interface="true">
    <attribute name="type" type="java.lang.String"/>
    <collection name="QTLs" referenced-type="QTL" reverse-reference="markers"/>
  </class>

</classes>
